<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SaveUp"
             x:Class="SaveUp.AddItemPage">

    <StackLayout Padding="10">
        <Entry Placeholder="Kurzbeschreibung" Text="{Binding Description}" />

        <Entry Placeholder="Preis" Keyboard="Numeric" Text="{Binding Price}" />

        <Button Text="Speichern" Command="{Binding SaveItemCommand}" />
    </StackLayout>
</ContentPage>
